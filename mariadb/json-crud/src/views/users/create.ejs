

<form style="display:flex; flex-direction:column; width:500px; margin:auto; padding:20px; gap:10px;"  method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%=user? user.name: ''%>" required>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%=user? user.email: ''%>"  required>
    <label for="first-password">Password:</label>
    <input type="password" id="first-password" name="first-password" required>
    <label for="second-password">Password:</label>
    <input type="password" id="second-password" name="second-password" required>
    <button type="submit">Add User</button>
</form>